<h1>All tasks</h1>

<% @tasks.each do |task| %>
  <p><input type = "checkbox" name = "task"
  <%=(task.completed ? "checked" : "") %>></p>

  <h1><%= link_to task.title, task_path(task) %></h1></p>


  <%= link_to "Destroy #{task.title}", tasks_path(task), method: :delete, data: { confirm: "Are you sure?"}
   %>

<% end %>

<p><%= link_to "+ add new task ", tasks_new_path %></p>



